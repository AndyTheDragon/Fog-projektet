'https://plantuml.com/class-diagram

class Main
{
    + void main(String[] args)
}


package "Entities" {
interface IMaterials
{
+ void getMaterials()
}

class Carport
{
- List<IMaterials> materialsList
-int length
-int width
-int height
-boolean hasShed
